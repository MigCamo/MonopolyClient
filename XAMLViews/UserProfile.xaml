            </Border>
            <Border x:Name="brdProfile8" MouseLeftButtonDown ="ProfileImage_Click" BorderThickness="3" >
                <Image x:Name="imgProfile8" HorizontalAlignment="Left" Height="100" Margin="698,382,0,0" VerticalAlignment="Top" Width="100" Source="\GameResources\Pictures\UserProfiles\descarga.jpg" RenderTransformOrigin="0.568,0.772"/>
            </Border>
            <Label Content="Elija Perfil" HorizontalAlignment="Left" Margin="745,139,0,0" VerticalAlignment="Top" Foreground="White" FontSize="35" FontFamily="Arial Rounded MT Bold"/>
            <Button Content="Cambiar Perfil" HorizontalAlignment="Left" Margin="745,535,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.829,-12.588" Height="35" Width="176"/>
        </Grid>
        
    </Grid>
</Window>
